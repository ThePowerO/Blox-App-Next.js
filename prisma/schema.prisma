generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String      @id @default(cuid())
  name          String?     @unique
  email         String?     @unique
  password      String?
  createdAt     DateTime    @unique @default(now())
  updatedAt     DateTime    @updatedAt
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  Combo         Combo[]
  sessions      Session[]
  favorites     Favorite[]
  comments      Comment[]
  likedCombos   Like[]
  commentLikes  CommentLike[]

  @@unique([id, image, name])
}

model Comment {
  id            String   @id @default(cuid())
  userId        String
  comboId       String
  userName      String
  userImage     String
  text          String
  createdAt     DateTime @default(now())
  updatedAt     DateTime    @updatedAt
  likes         CommentLike[]

  combo         Combo   @relation(fields: [comboId], references: [id], onDelete: Cascade)
  user          User    @relation(fields: [userId, userImage, userName], references: [id, image, name], onDelete: Cascade)
}

model Favorite {
  id        String   @id @default(cuid())
  comboId   String
  userId    String
  createdAt DateTime @default(now())
  combo     Combo    @relation(fields: [comboId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CommentLike {
  id        String   @id @default(cuid())
  commentId String
  userId    String
  createdAt DateTime @default(now())

  comment   Comment     @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Like {
  comboId  String
  userId   String
  createdAt DateTime @default(now())
  combo    Combo    @relation(fields: [comboId], references: [id])
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([comboId, userId])
}

model Combo {
  id               String      @id @default(cuid())
  slug             String      @unique
  difficulty       String
  author           String
  authorImage      String
  authorEmail      String
  authorCreatedAt  DateTime
  combotitle       String
  combodescription String
  fightingstyle    String
  fruit            String
  sword            String
  weapon           String
  specialty        String
  race             String
  mainStats        String
  comboVideo       String
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  user             User        @relation(fields: [authorCreatedAt], references: [createdAt], onDelete: Cascade)
  likes            Like[]
  favorites        Favorite[]
  comments         Comment[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}